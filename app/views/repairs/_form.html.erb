<%= form_for ([@vehicle, @repair]) do |f| %>
  <% if @repair.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@repair.errors.count, "error") %> prohibited this repair from being saved:</h2>

      <ul>
      <% @repair.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :work %><br>
    <%= f.text_field :work, class: "form-control", placeholder: "enter work done on car" %>
  </div>
  <div class="field form-group">
    <%= f.label :cost %><br>
    <%= f.text_field :cost, class: "form-control", placeholder: "enter cost of work done"  %>
  </div>
  <div class="field form-group">
    <%= f.label :shop %><br>
    <%= f.text_field :shop, class: "form-control", placeholder: "enter business that did the work" %>
  </div>  
  <div class="field form-group">
    <%= f.label :date %><br>
    <%= f.date_field :date, class: "form-control", placeholder: "enter date when work was done" %>
  </div>
  <div class="field form-group">
    <%= f.label :mileage %><br>
    <%= f.number_field :mileage, class: "form-control", placeholder: "enter mileage of car when work was done" %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
