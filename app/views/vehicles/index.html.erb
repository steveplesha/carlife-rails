<% if @vehicles.empty? %>
    <div class="container">
        <h1>You don't have any cars added yet!</h1>
        <h2>Click the button to add one now</h2>
    </div>
<% else %> 
       <div class="carlist row">   
        <% @vehicles.each do |vehicle| %>
           <div class="car-item col-xs-10 col-xs-offset-1 col-sm-4 col-sm-offset-1 col-md-4 col-md-offset-1">
                <h1 class="car-item-title"><%= vehicle.year %> <%= vehicle.make %> <%= vehicle.model %></h1>
                <%= image_tag(vehicle.vehicleimage, class: "car-image") %>
                <div class="dropdown">
                       <button class="dropdown btn btn-car-item" type="button" data-toggle="dropdown" href="#">Menu <span class="caret"></span></button>
                        <ul class="dropdown-menu">
                            <li><%= link_to 'Edit Car Info/Picture', edit_vehicle_path(vehicle) %></li>
                            <li><%= link_to 'Show Repairs List/Add', vehicle_repairs_path(vehicle) %></li>
                            <li><%= link_to 'Delete This Car', vehicle, method: :delete, data: { confirm: "Are you sure? This can't be undone" }, class: "delete-link" %></li>
                        </ul>
                </div>
            </div>
        <% end %>
    </div>
<% end %>
<div class="container">
    <%= link_to 'New Vehicle', new_vehicle_path, class: "btn btn-primary" %>
</div>